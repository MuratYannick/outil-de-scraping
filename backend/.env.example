# Backend Environment Variables
# À dupliquer en .env et remplir avec vos valeurs

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=outil_scraping
DB_USER=root
DB_PASSWORD=

# Scraping Configuration
PLAYWRIGHT_HEADLESS=true
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=5000

# ========================================
# ANTI-BOT STRATEGIES CONFIGURATION
# ========================================

# Active Strategy: none | proxies | captcha_solver | stealth | hybrid
ANTIBOT_STRATEGY=none

# ----------------------------------------
# OPTION 1: PROXIES RÉSIDENTIELS
# ----------------------------------------
PROXY_ENABLED=false
PROXY_PROVIDER=           # brightdata | oxylabs | smartproxy | custom

# BrightData (anciennement Luminati) - https://brightdata.com
BRIGHTDATA_HOST=
BRIGHTDATA_PORT=22225
BRIGHTDATA_USERNAME=
BRIGHTDATA_PASSWORD=
BRIGHTDATA_COUNTRY=fr

# Oxylabs - https://oxylabs.io
OXYLABS_HOST=
OXYLABS_PORT=7777
OXYLABS_USERNAME=
OXYLABS_PASSWORD=
OXYLABS_COUNTRY=fr

# SmartProxy - https://smartproxy.com
SMARTPROXY_HOST=
SMARTPROXY_PORT=10000
SMARTPROXY_USERNAME=
SMARTPROXY_PASSWORD=
SMARTPROXY_COUNTRY=fr

# Custom Proxy List (séparés par virgule)
# Format: http://user:pass@host:port ou http://host:port
PROXY_LIST=
PROXY_ROTATION=round-robin  # round-robin | random

# ----------------------------------------
# OPTION 2: CAPTCHA SOLVER
# ----------------------------------------
CAPTCHA_SOLVER_ENABLED=false
CAPTCHA_SOLVER_PROVIDER=  # 2captcha | anticaptcha | capmonster

# 2Captcha - https://2captcha.com
TWOCAPTCHA_API_KEY=

# Anti-Captcha - https://anti-captcha.com
ANTICAPTCHA_API_KEY=

# CapMonster - https://capmonster.cloud
CAPMONSTER_API_KEY=

# ----------------------------------------
# OPTION 3: STEALTH MODE
# ----------------------------------------
STEALTH_ENABLED=false
BROWSER_PROFILE_PATH=./browser-profiles/default

# ----------------------------------------
# LOGGING
# ----------------------------------------
LOG_LEVEL=info  # debug | info | warn | error
